@model PreschoolManagement.Models.ActivitySchedule
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Sửa thời khóa biểu";
    var classes = (SelectList)ViewBag.Classes;
}

@section Breadcrumb {
    <ol class="breadcrumb mb-3">
        <li class="breadcrumb-item"><a asp-area="Dashboard" asp-controller="Home" asp-action="Index">Tổng quan</a></li>
        <li class="breadcrumb-item"><a asp-area="Dashboard" asp-controller="ActivitySchedules" asp-action="Index">Thời khóa biểu</a></li>
        <li class="breadcrumb-item active">Sửa</li>
    </ol>
}

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post" class="row g-3">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="col-md-6">
                <label class="form-label">Lớp</label>
                <select asp-for="ClassRoomId" class="form-select" asp-items="classes">
                    <option value="">-- Chọn lớp --</option>
                </select>
                <span asp-validation-for="ClassRoomId" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label class="form-label">Thứ</label>
                <select asp-for="DayOfWeek" class="form-select">
                    @foreach (DayOfWeek d in Enum.GetValues(typeof(DayOfWeek)))
                    {
                        <option value="@((int)d)" selected="@(Model.DayOfWeek == d)">@d</option>
                    }
                </select>
                <span asp-validation-for="DayOfWeek" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label class="form-label">Buổi/Tiết</label>
                <input asp-for="Slot" class="form-control" />
                <span asp-validation-for="Slot" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label class="form-label">Hoạt động</label>
                <textarea asp-for="Activity" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Activity" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Cập nhật</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
