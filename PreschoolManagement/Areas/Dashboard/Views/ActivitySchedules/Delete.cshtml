@model PreschoolManagement.Models.ActivitySchedule
@{
    ViewData["Title"] = "Xóa thời khóa biểu";
}

@section Breadcrumb {
    <ol class="breadcrumb mb-3">
        <li class="breadcrumb-item"><a asp-area="Dashboard" asp-controller="Home" asp-action="Index">Tổng quan</a></li>
        <li class="breadcrumb-item"><a asp-area="Dashboard" asp-controller="ActivitySchedules" asp-action="Index">Thời khóa biểu</a></li>
        <li class="breadcrumb-item active">Xóa</li>
    </ol>
}

<div class="alert alert-warning">
    <strong>Bạn có chắc muốn xóa bản ghi này?</strong> Thao tác không thể hoàn tác.
</div>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Lớp</dt>
            <dd class="col-sm-9">@Model.ClassRoom?.Name</dd>

            <dt class="col-sm-3">Thứ</dt>
            <dd class="col-sm-9">@Model.DayOfWeek</dd>

            <dt class="col-sm-3">Buổi/Tiết</dt>
            <dd class="col-sm-9">@Model.Slot</dd>

            <dt class="col-sm-3">Hoạt động</dt>
            <dd class="col-sm-9">@Model.Activity</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
</form>
