@model IEnumerable<PreschoolManagement.Models.ClassRoom>
@{
    ViewData["Title"] = "Lớp học";
    string q = ViewBag.Query as string ?? "";
    int page = (int)(ViewBag.Page ?? 1);
    int pageSize = (int)(ViewBag.PageSize ?? 12);
    int total = (int)(ViewBag.Total ?? 0);
    int totalPages = (int)Math.Ceiling((double)total / Math.Max(1, pageSize));
}

@section Breadcrumb {
    <ol class="breadcrumb mb-3">
        <li class="breadcrumb-item"><a asp-area="Dashboard" asp-controller="Home" asp-action="Index">Tổng quan</a></li>
        <li class="breadcrumb-item active">Lớp học</li>
    </ol>
}

<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-2 align-items-center">
            <div class="col-md-6">
                <input name="q" value="@q" class="form-control" placeholder="Tìm theo tên / khối / phòng..." />
            </div>
            <div class="col-md-2">
                <select name="pageSize" class="form-select" onchange="this.form.submit()">
                    @foreach (var s in new[] { 6, 12, 24, 48 })
                    {
                        <option value="@s" selected="@(pageSize == s)">@s / trang</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button class="btn btn-primary w-100">Lọc</button>
            </div>
            <div class="col-md-2 text-end">
                <a class="btn btn-success w-100" asp-action="Create">+ Thêm lớp</a>
            </div>
        </form>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">Chưa có lớp học nào.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-3">
        @foreach (var c in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title mb-1">@c.Name</h5>
                        <div class="text-muted small mb-2">
                            Khối: <strong>@(c.Grade ?? "-")</strong> · Phòng: <strong>@(c.Room ?? "-")</strong>
                        </div>
                        <div class="mb-2">
                            GVCN: <strong>@(c.Teacher?.FullName ?? c.Teacher?.Email ?? "Chưa gán")</strong>
                        </div>
                        <div class="small text-muted">Sĩ số: @c.Students?.Count()</div>
                    </div>
                    <div class="card-footer d-flex justify-content-end gap-2">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@c.Id">Xem</a>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@c.Id">Sửa</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@c.Id">Xóa</a>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (totalPages > 1)
    {
        <nav class="mt-3">
            <ul class="pagination">
                <li class="page-item @(page <= 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-q="@q" asp-route-page="@(page - 1)" asp-route-pageSize="@pageSize">«</a>
                </li>
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == page ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-q="@q" asp-route-page="@i" asp-route-pageSize="@pageSize">@i</a>
                    </li>
                }
                <li class="page-item @(page >= totalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-q="@q" asp-route-page="@(page + 1)" asp-route-pageSize="@pageSize">»</a>
                </li>
            </ul>
        </nav>
    }
}
