@using Microsoft.AspNetCore.Identity
@using PreschoolManagement.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    var title = (ViewData["Title"] as string) ?? "Dashboard";
    var user = User?.Identity?.IsAuthenticated == true ? await UserManager.GetUserAsync(User) : null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <title>@title - Preschool Admin</title>
    <meta name="description" content="Bảng điều khiển quản trị mầm non" />
    <meta name="author" content="Preschool Admin" />

    <!-- Vendor styles -->
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Dashboard/css/styles.css" asp-append-version="true" />

    <!-- Icons -->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    @RenderSection("Styles", required: false)
</head>
<body class="sb-nav-fixed">
    <!-- Topbar -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Brand -->
        <a class="navbar-brand ps-3"
           asp-area="Dashboard" asp-controller="Home" asp-action="Index">
            Preschool Admin
        </a>

        <!-- Sidebar Toggle -->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0"
                id="sidebarToggle" type="button" aria-label="Toggle sidebar">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Search (optional) -->
        <form class="d-none d-md-inline-block ms-auto me-0 me-md-3 my-2 my-md-0" role="search">
            <div class="input-group">
                <input class="form-control" type="search" placeholder="Tìm kiếm..." aria-label="Search" />
                <button class="btn btn-primary" type="submit" aria-label="Search"><i class="fas fa-search"></i></button>
            </div>
        </form>

        <!-- User menu -->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown"
                   href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user fa-fw"></i>
                    <span class="ms-1">@user?.FullName ?? User?.Identity?.Name ?? "User"</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Về trang người dùng</a></li>
                    <li><a class="dropdown-item" asp-area="Dashboard" asp-controller="Users" asp-action="Index">Quản lý người dùng</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li>
                            <form class="dropdown-item p-0" asp-area="Identity" asp-page="/Account/Logout"
                                  asp-route-returnUrl="~/" method="post">
                                <button type="submit" class="btn btn-link w-100 text-start px-3">Đăng xuất</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a></li>
                    }
                </ul>
            </li>
        </ul>
    </nav>

    <div id="layoutSidenav">
        <!-- Sidebar -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">

                        <div class="sb-sidenav-menu-heading">Core</div>
                        <a class="nav-link"
                           asp-area="Dashboard" asp-controller="Home" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Tổng quan
                        </a>

                        <div class="sb-sidenav-menu-heading">Quản lý</div>

                        <a class="nav-link collapsed" href="#"
                           data-bs-toggle="collapse" data-bs-target="#collapseAcademics"
                           aria-expanded="false" aria-controls="collapseAcademics">
                            <div class="sb-nav-link-icon"><i class="fas fa-school"></i></div>
                            Học vụ
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseAcademics" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link"
                                   asp-area="Dashboard" asp-controller="ClassRooms" asp-action="Index">
                                    Lớp học
                                </a>
                                <a class="nav-link"
                                   asp-area="Dashboard" asp-controller="Students" asp-action="Index">
                                    Học sinh
                                </a>
                                <a class="nav-link"
                                   asp-area="Dashboard" asp-controller="ActivitySchedules" asp-action="Index">
                                    Thời khóa biểu
                                </a>
                            </nav>
                        </div>

                        <a class="nav-link collapsed" href="#"
                           data-bs-toggle="collapse" data-bs-target="#collapseFinance"
                           aria-expanded="false" aria-controls="collapseFinance">
                            <div class="sb-nav-link-icon"><i class="fas fa-coins"></i></div>
                            Tài chính
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseFinance" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link"
                                   asp-area="Dashboard" asp-controller="FeeInvoices" asp-action="Index">
                                    Hóa đơn học phí
                                </a>
                            </nav>
                        </div>

                        <a class="nav-link"
                           asp-area="Dashboard" asp-controller="Announcements" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-bullhorn"></i></div>
                            Thông báo
                        </a>

                        <a class="nav-link"
                           asp-area="Dashboard" asp-controller="Users" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Người dùng
                        </a>

                        <div class="sb-sidenav-menu-heading">Addons</div>
                        <a class="nav-link" asp-area="Dashboard" asp-controller="Home" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                            Charts (demo)
                        </a>
                        <a class="nav-link" asp-area="Dashboard" asp-controller="Home" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            Tables (demo)
                        </a>
                    </div>
                </div>

                <div class="sb-sidenav-footer">
                    <div class="small">Đăng nhập bởi:</div>
                    @user?.FullName ?? User?.Identity?.Name ?? "Guest"
                </div>
            </nav>
        </div>

        <!-- Content -->
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">@title</h1>

                    @RenderSection("Breadcrumb", required: false)

                    @RenderBody()
                </div>
            </main>

            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">&copy; Preschool Admin @DateTime.Now.Year</div>
                        <div>
                            <a href="#">Privacy</a>
                            &middot;
                            <a href="#">Terms</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Vendor scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    <!-- SB Admin core -->
    <script src="~/Dashboard/js/scripts.js" asp-append-version="true"></script>

    <!-- Charts (demo) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="~/Dashboard/assets/demo/chart-area-demo.js" asp-append-version="true"></script>
    <script src="~/Dashboard/assets/demo/chart-bar-demo.js" asp-append-version="true"></script>

    <!-- Tables -->
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <script src="~/Dashboard/js/datatables-simple-demo.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
