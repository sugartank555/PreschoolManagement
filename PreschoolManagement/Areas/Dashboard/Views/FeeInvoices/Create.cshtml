@model PreschoolManagement.Models.FeeInvoice
@{
    ViewData["Title"] = "Tạo hóa đơn";
    var parents = (SelectList)ViewBag.Parents;
    // ViewBag.StudentOpts: List<dynamic> { Id, ParentId, Text }
}

@section Breadcrumb {
    <ol class="breadcrumb mb-3">
        <li class="breadcrumb-item"><a asp-area="Dashboard" asp-controller="Home" asp-action="Index">Tổng quan</a></li>
        <li class="breadcrumb-item"><a asp-area="Dashboard" asp-controller="FeeInvoices" asp-action="Index">Hóa đơn học phí</a></li>
        <li class="breadcrumb-item active">Tạo</li>
    </ol>
}

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post" class="row g-3">
            @Html.AntiForgeryToken()

            <!-- Học sinh -->
            <div class="col-12">
                <label class="form-label">Học sinh</label>
                <select asp-for="StudentId" class="form-select" id="StudentId">
                    <option value="">-- Chọn học sinh --</option>
                    @foreach (var s in (IEnumerable<dynamic>)ViewBag.StudentOpts)
                    {
                        <option value="@s.Id" data-parent="@s.ParentId">@s.Text</option>
                    }
                </select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>

            <!-- Phụ huynh -->
            <div class="col-12">
                <label class="form-label">Phụ huynh</label>
                <select asp-for="ParentId" class="form-select" id="ParentId" asp-items="parents">
                    <option value="">-- Chọn phụ huynh (tự điền theo học sinh) --</option>
                </select>
                <span asp-validation-for="ParentId" class="text-danger"></span>
                <div class="form-text">Khi chọn học sinh, hệ thống sẽ tự chọn phụ huynh nếu có liên kết.</div>
            </div>

            <!-- Tháng -->
            <div class="col-md-4">
                <label class="form-label">Tháng</label>
                <input asp-for="Month" type="month" class="form-control" />
            </div>

            <!-- Trạng thái -->
            <div class="col-md-4">
                <label class="form-label">Trạng thái</label>
                <select asp-for="Status" class="form-select">
                    <option>Pending</option>
                    <option>Paid</option>
                    <option>Overdue</option>
                </select>
            </div>

            <!-- Amount / Paid -->
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <label class="form-label">Số tiền</label>
                <input asp-for="Amount" class="form-control" type="number" min="0" step="1000" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label class="form-label">Đã thu</label>
                <input asp-for="Paid" class="form-control" type="number" min="0" step="1000" />
                <span asp-validation-for="Paid" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex gap-2">
                <button class="btn btn-primary" type="submit">Lưu</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
    <script>
        (function () {
            const selStudent = document.getElementById('StudentId');
            const selParent  = document.getElementById('ParentId');

            if (selStudent && selParent) {
                selStudent.addEventListener('change', function () {
                    const opt = this.options[this.selectedIndex];
                    const pid = opt ? opt.getAttribute('data-parent') : '';
                    if (pid) selParent.value = pid; // auto-chọn phụ huynh gắn với học sinh
                });
            }
        })();
    </script>
}
