@model PreschoolManagement.Models.FeeInvoice
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Sửa hóa đơn";
    var students = (SelectList)ViewBag.Students;
    string monthStr = new DateTime(Model.Month.Year, Model.Month.Month, 1).ToString("yyyy-MM");
}

@section Breadcrumb {
    <ol class="breadcrumb mb-3">
        <li class="breadcrumb-item"><a asp-area="Dashboard" asp-controller="Home" asp-action="Index">Tổng quan</a></li>
        <li class="breadcrumb-item"><a asp-area="Dashboard" asp-controller="FeeInvoices" asp-action="Index">Hóa đơn học phí</a></li>
        <li class="breadcrumb-item active">Sửa</li>
    </ol>
}

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post" class="row g-3">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="col-md-6">
                <label class="form-label">Học sinh</label>
                <select asp-for="StudentId" class="form-select" asp-items="students">
                    <option value="">-- Chọn học sinh --</option>
                </select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label class="form-label">Tháng</label>
                <input type="month" class="form-control" name="Month" value="@monthStr" />
            </div>

            <div class="col-md-3">
                <label class="form-label">Trạng thái</label>
                <select asp-for="Status" class="form-select">
                    <option value="Pending" selected="@(Model.Status == "Pending")">Pending</option>
                    <option value="Paid" selected="@(Model.Status == "Paid")">Paid</option>
                    <option value="Overdue" selected="@(Model.Status == "Overdue")">Overdue</option>
                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label">Số tiền</label>
                <input asp-for="Amount" class="form-control" type="number" step="1000" min="0" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label class="form-label">Đã trả</label>
                <input asp-for="Paid" class="form-control" type="number" step="1000" min="0" />
                <span asp-validation-for="Paid" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex gap-2">
                <button class="btn btn-primary" type="submit">Cập nhật</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
