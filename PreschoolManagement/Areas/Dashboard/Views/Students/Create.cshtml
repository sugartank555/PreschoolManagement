@model PreschoolManagement.Models.Student
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Thêm học sinh";
    var classes = (SelectList)ViewBag.Classes;
}

@section Breadcrumb {
    <ol class="breadcrumb mb-3">
        <li class="breadcrumb-item"><a asp-area="Dashboard" asp-controller="Home" asp-action="Index">Tổng quan</a></li>
        <li class="breadcrumb-item"><a asp-area="Dashboard" asp-controller="Students" asp-action="Index">Học sinh</a></li>
        <li class="breadcrumb-item active">Thêm</li>
    </ol>
}

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post" class="row g-3">
            @Html.AntiForgeryToken()

            <div class="col-md-4">
                <label class="form-label">Mã học sinh <span class="text-danger">*</span></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div class="col-md-8">
                <label class="form-label">Họ và tên <span class="text-danger">*</span></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label class="form-label">Ngày sinh <span class="text-danger">*</span></label>
                <input asp-for="BirthDate" type="date" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label class="form-label">Giới tính</label>
                <select asp-for="Gender" class="form-select">
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                    <option value="Khác">Khác</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label class="form-label">Lớp</label>
                <select asp-for="ClassRoomId" class="form-select" asp-items="classes">
                    <option value="">-- Chưa xếp lớp --</option>
                </select>
                <span asp-validation-for="ClassRoomId" class="text-danger"></span>
            </div>

            @* Nếu dùng ParentId là ApplicationUser (phụ huynh), có thể thêm trường nhập tại đây *@
            @* <div class="col-md-6">
           <label class="form-label">Phụ huynh (UserId)</label>
           <input asp-for="ParentId" class="form-control" />
           <span asp-validation-for="ParentId" class="text-danger"></span>
         </div> *@

            <div class="col-12 d-flex gap-2">
                <button class="btn btn-primary" type="submit">Lưu</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
