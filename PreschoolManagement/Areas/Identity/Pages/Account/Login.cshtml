@page
@model LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Preschool</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #4facfe, #00f2fe);
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: "Segoe UI", system-ui, -apple-system, sans-serif;
        }

        .login-card {
            background: #fff;
            border-radius: 1rem;
            box-shadow: 0 8px 24px rgba(0,0,0,.15);
            padding: 2rem;
            width: 100%;
            max-width: 420px;
        }

            .login-card h2 {
                font-weight: 600;
                color: #333;
                margin-bottom: .5rem;
            }

        .text-muted-small {
            color: #6c757d;
            font-size: .95rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, #4facfe, #00f2fe);
            border: none;
            font-weight: 600;
        }

            .btn-primary:hover {
                opacity: .9;
            }

        .form-floating label {
            color: #555;
        }

        .actions a {
            text-decoration: none;
        }

        .toggle-password {
            cursor: pointer;
            position: absolute;
            right: .75rem;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
            font-size: .95rem;
        }

        .position-relative .form-control {
            padding-right: 2.5rem;
        }
    </style>
</head>
<body>
    <div class="login-card">
        <h2 class="text-center">@ViewData["Title"]</h2>
        <p class="text-center text-muted-small mb-4">Đăng nhập để sử dụng hệ thống</p>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="name@example.com"
                       autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-3 position-relative">
                <div class="form-floating">
                    <input asp-for="Input.Password" type="password" class="form-control"
                           placeholder="password" autocomplete="current-password" aria-required="true" id="passwordField" />
                    <label asp-for="Input.Password">Mật khẩu</label>
                </div>
                <span class="toggle-password" id="togglePwd">Hiện</span>
                <span asp-validation-for="Input.Password" class="text-danger d-block mt-1"></span>
            </div>

            <div class="d-flex align-items-center justify-content-between mb-4">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <a id="forgot-password" asp-page="./ForgotPassword" class="small">Quên mật khẩu?</a>
            </div>

            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Đăng nhập</button>

            <div class="actions text-center mt-3">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="small">Chưa có tài khoản? Đăng ký</a>
                <br />
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="small">Gửi lại email xác nhận</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const pwd = document.getElementById('passwordField');
            const btn = document.getElementById('togglePwd');
            if (pwd && btn) {
                btn.addEventListener('click', function () {
                    const isPwd = pwd.getAttribute('type') === 'password';
                    pwd.setAttribute('type', isPwd ? 'text' : 'password');
                    btn.textContent = isPwd ? 'Ẩn' : 'Hiện';
                });
            }
        })();
    </script>
</body>
</html>
