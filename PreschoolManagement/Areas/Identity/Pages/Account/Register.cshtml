@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Preschool</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #4facfe, #00f2fe);
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: "Segoe UI", sans-serif;
        }
        .register-card {
            background: #fff;
            border-radius: 1rem;
            box-shadow: 0 8px 24px rgba(0,0,0,.15);
            padding: 2rem;
            width: 100%;
            max-width: 420px;
        }
        .register-card h2 {
            font-weight: 600;
            color: #333;
            margin-bottom: 1rem;
        }
        .form-floating label {
            color: #555;
        }
        .btn-primary {
            background: linear-gradient(135deg, #4facfe, #00f2fe);
            border: none;
            font-weight: 600;
        }
        .btn-primary:hover {
            opacity: .9;
        }
    </style>
</head>
<body>
    <div class="register-card">
        <h2 class="text-center">Đăng ký tài khoản</h2>
        <p class="text-muted text-center mb-4">Tạo tài khoản mới để sử dụng hệ thống</p>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="password" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password">Mật khẩu</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="confirm password" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword">Nhập lại mật khẩu</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Đăng ký</button>
        </form>

        <div class="text-center mt-3">
            <a asp-page="/Account/Login" class="text-decoration-none">Đã có tài khoản? Đăng nhập</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
