@{
    Layout = null;
    var pageTitle = ViewData["Title"] as string ?? "Scholar - Online School";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@pageTitle</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet" />

    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/assets/css/fontawesome.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/assets/css/templatemo-scholar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/assets/css/owl.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/assets/css/animate.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />

    @RenderSection("Styles", required: false)
    <!--
      TemplateMo 586 Scholar
      https://templatemo.com/tm-586-scholar
    -->
</head>
<body>
    <!-- ***** Preloader Start ***** -->
    <div id="js-preloader" class="js-preloader">
        <div class="preloader-inner">
            <span class="dot"></span>
            <div class="dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->
    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a asp-controller="Home" asp-action="Index" class="logo">
                            <h1>Scholar</h1>
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Search End ***** -->
                        @{
                            string c = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "").ToLowerInvariant();
                        }
                        <ul class="nav align-items-center ms-auto">
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Home" asp-action="Index"
                                   class="nav-link @(c == "home" ? "active fw-bold" : "")">Trang chủ</a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Announcements" asp-action="Index"
                                   class="nav-link @(c == "announcements" ? "active fw-bold" : "")">Thông báo</a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Schedules" asp-action="Index"
                                   class="nav-link @(c == "schedules" ? "active fw-bold" : "")">Thời khóa biểu</a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="MyChildren" asp-action="Index"
                                   class="nav-link @(c == "mychildren" ? "active fw-bold" : "")">Con em</a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Invoices" asp-action="Index"
                                   class="nav-link @(c == "invoices" ? "active fw-bold" : "")">Hóa đơn</a>
                            </li>

                            @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                            {
                                <li class="nav-item ms-2">
                                    <a asp-area="Dashboard" asp-controller="Home" asp-action="Index"
                                       class="nav-link px-3 rounded-pill bg-warning text-dark fw-semibold">
                                        Dashboard
                                    </a>
                                </li>
                            }

                            @if (User?.Identity?.IsAuthenticated ?? false)
                            {
                                <li class="nav-item ms-2">
                                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="~/" method="post" class="d-inline">
                                        <button class="nav-link px-3 rounded-pill border border-light text-white bg-transparent">
                                            Đăng xuất
                                        </button>
                                    </form>
                                </li>
                            }

                        <a class="menu-trigger">
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->

    <div class="main-banner" id="top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <footer class="mt-5">
        <div class="container">
            <div class="col-lg-12">
                <p>
                    Copyright © 2036 Scholar Organization. All rights reserved.
                    &nbsp;&nbsp;&nbsp;
                    Design:
                    <a href="https://templatemo.com" rel="nofollow" target="_blank">TemplateMo</a>
                </p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/vendor/jquery/jquery.min.js" asp-append-version="true"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/assets/js/isotope.min.js" asp-append-version="true"></script>
    <script src="~/assets/js/owl-carousel.js" asp-append-version="true"></script>
    <script src="~/assets/js/counter.js" asp-append-version="true"></script>
    <script src="~/assets/js/custom.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
