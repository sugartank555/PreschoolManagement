@model PreschoolManagement.Models.ContactMessage
@{
    ViewData["Title"] = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var kids = ViewBag.MyStudents as IEnumerable<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>;
}
@section Styles {
    <style>
        .card {
            border-radius: 1rem;
            box-shadow: 0 10px 30px rgba(0,0,0,.06);
        }</style>
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card p-4">
                <h2 class="mb-3">Liên hệ</h2>
                <p class="text-muted mb-4">Hãy để lại lời nhắn, chúng tôi sẽ phản hồi sớm nhất.</p>

                <form asp-action="Index" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Họ và tên</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Subject" class="form-label">Chủ đề</label>
                        <input asp-for="Subject" class="form-control" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Liên quan đến bé</label>

                        @if (kids != null && kids.Any())
                        {
                            <select asp-for="RelatedStudentId" class="form-select" asp-items="ViewBag.MyStudents">
                                <option value="">-- Không chọn --</option>
                            </select>
                        }
                        else
                        {
                            <select class="form-select" disabled>
                                <option>Không có bé nào để chọn</option>
                            </select>
                            <small class="text-muted d-block mt-1">
                                @if (User.Identity?.IsAuthenticated != true)
                                {
                                    @:Vui lòng <a asp-area="Identity" asp-page="/Account/Login">đăng nhập</a> để chọn bé của bạn.
                                }
                                else
                                {
                                    @:Tài khoản của bạn chưa có hồ sơ bé. Hãy thêm ở <a asp-area="Dashboard" asp-controller="Students" asp-action="Create">Dashboard &rarr; Thêm học sinh</a>.
                                }
                            </small>
                        }
                    </div>

                    <div class="mb-4">
                        <label asp-for="Message" class="form-label">Nội dung</label>
                        <textarea asp-for="Message" rows="5" class="form-control"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>

                    <button class="btn btn-primary">Gửi liên hệ</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary ms-2">Về trang chủ</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
